{% set publicPath = paths.public.root | split('?') | first %}

<link rel="stylesheet" type="text/css" href="{{ publicPath }}css/callout.css" media="screen,print">
<link rel="stylesheet" type="text/css" href="{{ publicPath }}vendor/datatables/datatables.min.css" media="screen,print">

<div class="row">
  <div class="col-md-9">
	{% block title %}
		<h1>Study Metadata Search</h1>
	{% endblock %}
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal-dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-dialog-title">Study Metadata Search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <span id="modal-dialog-message">Message Placeholder</span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{% block body %}{% endblock %}

<script type="text/javascript" src="{{ publicPath }}vendor/datatables/datatables.min.js"></script>