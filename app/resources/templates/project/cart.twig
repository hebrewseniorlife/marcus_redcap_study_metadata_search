<div class="modal fade" tabindex="-1" role="dialog" id="cart-modal-dialog">
  <div class="modal-dialog  modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Study Metadata Cart</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10">
                    {% include 'message-panel.twig' with { 'prefix' : 'cart' } %}

                    <form id="cart-form" action="{{paths.api | raw}}" accept-charset="UTF-8" method="post">
                        <input type="hidden" name="action" value=""/>
                        <input type="hidden" name="entity" value="cart"/>  
                        <table class="table table-striped table-bordered" id="cart-table" style="margin-left:0">
                            <thead>      
                            <tr>
                                    <th>#</th>
                                    <th>Project</th>
                                    <th>Name</th>
                                    <th>Form</th>
                                    <th>Entity</th>
                                    <th>Label</th>
                                    <th>Data Type</th>
                                </tr>                             
                            </thead>  
                            <tbody></tbody>      
                        </table>
                    </form>
            </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
$(document).ready(function() {
    $('#view-cart-link').click(onViewCartClick);
    $('#cart-form').submit(onCartFormSubmit);

    $('#cart-table').DataTable({
        dom: 'Bftip'
        , ajax: {
            url: '{{ paths.api | raw }}&entity=cart&action=getall',
            dataSrc: 'documents'
        }
        , "oLanguage": {
            "sSearch": "Filter"
        }
        , columns: [
            { 
                "data" : "id"
                , "render" : function ( data, type, row ) { 
                        return '<div class="form-check">' +
                                    '<input class="form-check-input" type="checkbox" name="document[]" id="' + data + '">' +
                                '</div>'; 
                    }
            }
            ,  { "data": "project_title" }
            , { "data": "name" }
            , { "data": "form_name" }
            , { "data": "entity" }
            , { "data": "label" }
            , { "data": "field_type" }
        ]
        , "buttons": [
            {
                text: 'Check All',
                action: function ( e, dt, node, config ) {
                    $('#cart-form input:checkbox').prop('checked', true);
                }
            },
            {
                text: 'Uncheck All',
                action: function ( e, dt, node, config ) {
                    $('#cart-form input:checkbox').prop('checked', false);
                }
            },     
            {
                text: 'Remove from Cart',
                action: function ( e, dt, node, config ) {
                    var action = $('#cart-form > [name="action"]');
                    action.val('remove');

                    $('#cart-form').submit();
                }
            }       
        ]
        , rowId: 'id'
        , paging: true
    });
} );

function redrawCartTable(){
    var table = $('#cart-table').DataTable();
    table.ajax.reload();
    table.columns.adjust().draw();
}

function onViewCartClick(e){
    $('#cart-modal-dialog').modal('show');
    redrawCartTable();
}

function onCartFormSubmit(e, dt, node, config) {
    e.preventDefault(); // avoid to execute the actual submit of the form.

    var form = $(this);
    var url = form.attr('action');

    $.ajax({
           type: "POST",
           url: url,
           data: form.serialize(),
           success: function(data, status)
           {
                console.log(data);
                if (data.message != ""){
                    $('#cart-alert').trigger('message', {
                        text: data.message,
                        style: 'success'
                    });

                    $('#cart-button-text').text('Cart (' + data.count + ')');
                    redrawCartTable();
                }
           }
    }); 
}

</script>