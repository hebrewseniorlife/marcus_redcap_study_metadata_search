                                </svg></a><span class="small">&nbsp; (JSON)</span>   
                            </div>                                              
                        </div>
                    </div>
                </span>
            </div>
        </form>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#search-form').submit(onSearchFormSubmit);

});

function onSearchFormSubmit(e){
    e.preventDefault();

    var form = $(this);
    var url = form.attr('action');
    var data = form.serialize();

    window.location = url + "&" + data;
}
</script>


