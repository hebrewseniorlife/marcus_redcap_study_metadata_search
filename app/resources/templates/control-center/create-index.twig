{% extends "base.twig" %}

{% block body %}

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <h5 class="card-header">Indexed</h5>
      <div class="card-body">
        <div class="bs-callout bs-callout-success">
            The index was rebuilt successfully using <i>{{ engine.name }}</i> engine and current document repository.  See statistics and log below (LOG_LEVEL=DEBUG).
        </div>
        <div>
            <code><pre>{{log}}</pre></code>
        </div>        
      </div>
    </div>
  </div>
</div>
<br/>

{% include 'statistics.twig' %}

<br/>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-footer">
        <a class="btn btn-primary" href="{{ paths.view }}" role="button" style="color: white">Engine Summary</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}